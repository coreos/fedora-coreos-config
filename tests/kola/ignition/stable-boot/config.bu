variant: fcos
version: 1.3.0
storage:
  disks:
  - device: /dev/disk/by-id/coreos-boot-disk
    wipe_table: false
    partitions:
    - number: 5
      size_mib: 1024
      label: toor
  filesystems:
    - path: /var/lib/toor
      device: /dev/disk/by-partlabel/toor
      format: ext4
      with_mount_unit: true
