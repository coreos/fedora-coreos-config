#!/bin/bash
# kola: { "exclusive": false }
set -xeuo pipefail

fatal() {
    echo "$@" >&2
    exit 1
}

list="$(find /etc -type f -type d -perm /022)"
if [[ -n "${list}" ]]; then
    find /etc -type f -type d -perm /022 -print0 | xargs -0 ls -al
    fatal "found files or directories with 'g+w' or 'o+w' permission"
fi
