variant: fcos
version: 1.3.0
storage:
  disks:
    - device: /dev/vda
      partitions:
        - label: var
          size_mib: 1000
          start_mib: 5000
        - label: varlog
      wipe_table: false
  luks:
    - name: varlog
      device: /dev/disk/by-partlabel/varlog
      clevis:
        tpm2: true
  filesystems:
    - device: /dev/disk/by-partlabel/var
      format: xfs
      path: /var
      with_mount_unit: true
    - device: /dev/mapper/varlog
      format: ext4
      path: /var/log
      with_mount_unit: true
