variant: fcos
version: 1.3.0
storage:
  disks:
    - device: /dev/vda
      partitions:
        - label: var
          size_mib: 1000
          start_mib: 5000
        - label: publicdata
      wipe_table: false
  luks:
    - name: data
      device: /dev/disk/by-partlabel/publicdata
      clevis:
        custom:
          needs_network: false
          pin: tpm2
          config: '{"pcr_bank":"sha1","pcr_ids":"0,7"}'
  filesystems:
    - device: /dev/disk/by-partlabel/var
      format: xfs
      path: /var
      with_mount_unit: true
    - device: /dev/mapper/data
      format: ext4
      path: /var/publicdata
      with_mount_unit: true

