variant: fcos
version: 1.4.0
storage:
  disks:
    # the symlink is from wwn=123456789 converted to hexadecimal (base16)
    - device: /dev/disk/by-id/scsi-300000000075bcd15
      wipe_table: true
      partitions:
        - number: 1
          label: var
  filesystems:
    - path: /var
      device: /dev/disk/by-partlabel/var
      format: xfs
      wipe_filesystem: true
      label: var
      with_mount_unit: true